<Window x:Class="StreamNode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StreamNode"
        mc:Ignorable="d"
        Title="MainWindow" ResizeMode="CanMinimize" Width="300" Height="250" Background="">
    <Window.Resources>
        <Image x:Key="ServerON" HorizontalAlignment="Left" Height="50" Margin="320,311,0,0" VerticalAlignment="Top" Width="50" OpacityMask="Black" Source="pack://application:,,,/Resources/Icons/server-on.png"/>
        <Image x:Key="ServerOFF" HorizontalAlignment="Left" Height="50" Margin="320,311,0,0" VerticalAlignment="Top" Width="50" OpacityMask="Black" Source="pack://application:,,,/Resources/Icons/server-off.png"/>
    </Window.Resources>
    <Grid>
        <TabControl>
            <TabItem Header="OBS">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    
                    <Button Grid.Row="1" Grid.Column="1" Name="MediaButton" Margin="20, 0, 20, 0">
                        <Button.Background>
                            <ImageBrush ImageSource="pack://application:,,,/Resources/Icons/server-off.png"/>
                        </Button.Background>
                    </Button>
                    
                </Grid>
            </TabItem>
            <TabItem Header="Settings"></TabItem>
        </TabControl>
    </Grid>
</Window>
