<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="build.zip" />
    <None Remove="Resources\Icons\microphone-off.svg" />
    <None Remove="Resources\Icons\microphone.svg" />
    <None Remove="Resources\Icons\volume-high.svg" />
    <None Remove="Resources\Icons\volume-off.svg" />
    <None Remove="WebClient\wwwroot\WebClient.zip" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\Icons\microphone-off.svg" />
    <EmbeddedResource Include="Resources\Icons\microphone.svg" />
    <EmbeddedResource Include="Resources\Icons\volume-high.svg" />
    <EmbeddedResource Include="Resources\Icons\volume-off.svg" />
    <EmbeddedResource Include="WebClient\wwwroot\WebClient.zip" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="EmbedIO" Version="3.4.3" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\StreamNodeEngine\StreamNodeEngine.csproj" />
  </ItemGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="mkdir $(ProjectDir)WebClient\wwwroot&#xD;&#xA;cd WebClient&#xD;&#xA;npm install&#xD;&#xA;npm run np-build&#xD;&#xA;cd ..&#xD;&#xA;Compress-Archive $(ProjectDir)WebClient\build\*.* $(ProjectDir)WebClient.zip -Force" />
  </Target>

</Project>