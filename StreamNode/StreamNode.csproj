<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWPF>true</UseWPF>
    <Authors>Luca Taddeo</Authors>
    <RepositoryUrl>https://github.com/lucalas/StreamNode</RepositoryUrl>
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <DebugType>None</DebugType>
    <DebugSymbols>false</DebugSymbols>
    <Version>0.0.1</Version>
    <Company />
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\Icons\microphone-off.svg" />
    <None Remove="Resources\Icons\microphone.svg" />
    <None Remove="Resources\Icons\volume-high.svg" />
    <None Remove="Resources\Icons\volume-off.svg" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\Icons\microphone-off.svg" />
    <EmbeddedResource Include="Resources\Icons\microphone.svg" />
    <EmbeddedResource Include="Resources\Icons\volume-high.svg" />
    <EmbeddedResource Include="Resources\Icons\volume-off.svg" />
    <EmbeddedResource Include="wwwroot\WebClient.zip" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="EmbedIO" Version="3.4.3" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\StreamNodeEngine\StreamNodeEngine.csproj" />
  </ItemGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="rmdir  /S /Q $(ProjectDir)wwwroot&#xD;&#xA;mkdir $(ProjectDir)wwwroot&#xD;&#xA;cd WebClient&#xD;&#xA;npm install&#xD;&#xA;npm run np-build" />
    <ZipDirectory SourceDirectory="$(ProjectDir)WebClient\build" DestinationFile="$(ProjectDir)wwwroot\WebClient.zip" />
  </Target>

</Project>