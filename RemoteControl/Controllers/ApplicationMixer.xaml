<UserControl x:Class="RemoteControl.ApplicationMixer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RemoteControl"
             mc:Ignorable="d">
    <Grid RenderTransformOrigin="0.5,0.5">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="0.022"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <Slider Name="VolumeSlider" ValueChanged="VolumeSlider_ValueChanged" Maximum="1" HorizontalAlignment="Center" Margin="0,41,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Name="Title" Content="{Binding title}" HorizontalAlignment="Center" Margin="0,9,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
    </Grid>
</UserControl>
